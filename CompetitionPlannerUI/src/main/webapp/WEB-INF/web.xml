<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Competition Planner</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <context-param>
    <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
    <param-value>client</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.PARTIAL_STATE_SAVING</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>${PROJECT_STAGE}</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
    <param-value>0</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.FACELETS_BUFFER_SIZE</param-name>
    <param-value>65535</param-value>
  </context-param>
  <context-param>
    <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>com.sun.faces.enableViewStateIdRendering</param-name>
    <param-value>false</param-value>
  </context-param>
  <env-entry>
    <!-- keine ViewExpiredException! -->
    <env-entry-name>jsf/ClientSideSecretKey</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>eQbfpbhGfilnyzCJ/ws0dA==</env-entry-value>
  </env-entry>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Public</web-resource-name>
      <description>keine Zugriffsbeschr√§nkung</description>
      <url-pattern>/resources/css/login.css</url-pattern>
      <url-pattern>/resources/js/login.js</url-pattern>
      <url-pattern>/resources/images/login.png</url-pattern>
      <url-pattern>/favicon.ico</url-pattern>
      <url-pattern>/register</url-pattern>
      <url-pattern>/passwordreset</url-pattern>
      <url-pattern>/passwordchange</url-pattern>
      <url-pattern>/logout</url-pattern>
    </web-resource-collection>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>AdminConsole</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>User</role-name>
    </auth-constraint>
    <!--user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint-->
  </security-constraint>
  <security-role>
    <role-name>User</role-name>
  </security-role>
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PasswordReset</servlet-name>
    <servlet-class>org.planner.ui.servlet.RegistryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PasswordReset</servlet-name>
    <url-pattern>/register</url-pattern>
    <url-pattern>/passwordreset</url-pattern>
    <url-pattern>/passwordchange</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/userimg</url-pattern>
  </servlet-mapping>
  <login-config>
    <auth-method>KEEP</auth-method>
    <form-login-config>
      <form-login-page>/login</form-login-page>
      <form-error-page>/login</form-error-page>
    </form-login-config>
  </login-config>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/sections/error.xhtml</location>
  </error-page>
</web-app>