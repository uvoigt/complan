			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
					<useCache>true</useCache>
					<archive>
						<manifestEntries>
							<!--Class-Path>model-${project.version}.jar commons-lang-2.6.jar</Class-Path-->
							<Implementation-Vendor>Uwe Voigt</Implementation-Vendor>
							<Implementation-Version>1.0</Implementation-Version>
							<Build-Timestamp>${build.time}</Build-Timestamp>
						</manifestEntries>
					</archive>
				</configuration>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.4.0</version>
				<configuration>
					<excludes>
						<exclude>Parser/**</exclude>
					</excludes>
					<encoding>UTF-8</encoding>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>compressBetter</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<property name="warSourceDir" location="${project.build.directory}/${project.build.finalName}"/>
								<property name="jsSource" location="${warSourceDir}/resources/js"/>
								<property name="cssSource" location="${warSourceDir}/resources/css"/>

								<!-- Nochmaliges Komprimieren des Javascripts -->
								<apply executable="java" verbose="true" dest="${jsSource}">
									<arg value="-jar"/>
									<arg file="${maven.dependency.com.google.javascript.closure-compiler.jar.path}"/>
									<arg value="--js_output_file"/>
									<targetfile/>
									<arg value="--rewrite_polyfills=false"/>
									<srcfile/>
									<fileset dir="${jsSource}" includes="*-min.js"/> 
									<mapper type="glob" from="*-min.js" to="*.js"/>
								</apply>

								<!-- Umbenennen der min-Dateien -->
								<move todir="${cssSource}">
									<fileset dir="${cssSource}"/>
									<mapper type="glob" from="*-min.css" to="*.css"/>
								</move>
								<!-- Löschen der übrigen min-Dateien -->
								<delete dir="${jsSource}" includes="*-min.js"/>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<id>timestamp-property</id>
						<goals>
							<goal>timestamp-property</goal>
						</goals>
						<configuration>
							<name>build.time</name>
							<pattern>dd.MM.yyyy HH:mm</pattern>
							<locale>de</locale>
							<timeZone>Europe/Berlin</timeZone>
						</configuration>
					</execution>
				</executions>
			</plugin>

