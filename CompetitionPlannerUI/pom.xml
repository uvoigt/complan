	<profiles>
		<profile>
			<id>Development</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
			<properties>
				<!-- Achtung, das haut nur hin, wenn /target/m2e-wtp/web-resources im Assembly zuerst gefunden wird  -->
				<PROJECT_STAGE>Development</PROJECT_STAGE>
			</properties>
			<repositories>
				<repository>
					<id>primefaces</id>
					<url>http://repository.primefaces.org</url>
				</repository>
				<repository>
					<id>jsf</id>
					<url>http://repository.jboss.org/nexus/content/repositories/thirdparty-releases</url>
				</repository>
			</repositories>
		</profile>
		<profile>
			<id>Production</id>
			<activation>
				<!--  wird aktiv, wenn kein anderes Profil aktiv ist -->
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<PROJECT_STAGE>Production</PROJECT_STAGE>
			</properties>
			<repositories>
				<repository>
					<id>primefaces</id>
					<url>http://repository.primefaces.org</url>
				</repository>
				<repository>
					<id>jsf</id>
					<url>http://repository.jboss.org/nexus/content/repositories/thirdparty-releases</url>
				</repository>
			</repositories>
		</profile>
	</profiles>

